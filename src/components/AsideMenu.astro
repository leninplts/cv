---
import avatar from "@/assets/images/face_1.jpg";
import ListCheckItem from "@/components/ListCheckItem.astro";
import ProgressBar from "@/components/ProgressBar.astro";
import ProgressCircle from "@/components/ProgressCircle.astro";
import SideInfoItem from "@/components/SideInfoItem.astro";
import BehanceIcon from "@/icons/BehanceIcon.astro";
import DribbbleIcon from "@/icons/DribbbleIcon.astro";
import GitHubIcon from "@/icons/GitHubIcon.astro";
import LinkedInIcon from "@/icons/LinkedInIcon.astro";
import TwitterIcon from "@/icons/TwitterIcon.astro";
import { Image } from "astro:assets";
---

<nav class="flex flex-col flex-1 h-full bg-[#20202a]">
  <!-- Sección fija del perfil -->
  <div class="flex-shrink-0">
    <div
      class="flex flex-col items-center justify-between px-2 py-6 gap-4 bg-[#252532fa]"
    >
      <Image
        src={avatar}
        alt="avatar"
        class="w-24 h-24 rounded-full object-cover"
      />
      <h1 class="text-zinc-200 text-lg font-bold">Lenin Jose</h1>
      <div
        class="flex flex-col items-center justify-center text-zinc-500 text-sm gap-1"
      >
        <p class="font-bold">INGENIERO DE SISTEMAS</p>
        <p class="">lenin.huaylla@gmail.com</p>
        <p class="">+51 951 084 366</p>
      </div>
    </div>
  </div>

  <div class="flex-1 overflow-y-auto flex flex-col gap-2 scrollbar-hide">
    <div
      class="flex flex-col justify-center text-zinc-500 text-sm gap-1 px-8 py-4"
    >
      <SideInfoItem title="Nacionalidad" content="Peruano" />
      <SideInfoItem title="Ciudad" content="Puno, Perú" />
      <SideInfoItem title="Edad" content="26 años" />
      <!-- <SideInfoItem title="Ingeniero de sistemas" content="Ingeniero de sistemas con más de 5 años de experiencia en el desarrollo de software. Apasionado por la tecnología y la resolución de problemas. Siempre busco nuevas formas de mejorar mis habilidades y contribuir al éxito de los proyectos en los que trabajo." /> -->
    </div>
    <hr class="mx-8 border-zinc-600" />
    <div class="flex justify-around px-8 py-4">
      <ProgressCircle percentage={100} label="Español" />
      <ProgressCircle percentage={80} label="Inglés" />
      <ProgressCircle percentage={60} label="Portugués" />
    </div>
    <hr class="mx-8 border-zinc-600" />
    <div class="flex flex-col justify-center items-center gap-4 px-8 py-4">
      <ProgressBar skill="React (TS)" percentage={80} />
      <ProgressBar skill="Angular (TS)" percentage={90} />
      <ProgressBar skill="NestJS (TS)" percentage={80} />
      <ProgressBar skill=".Net (C#)" percentage={90} />
      <ProgressBar skill="Fast API (Python)" percentage={85} />
      <ProgressBar skill="PostgreSQL" percentage={90} />
    </div>
    <hr class="mx-8 border-zinc-600" />
    <div class="flex flex-col justify-center items-center gap-4 px-8 py-4">
      <ListCheckItem text="git" />
      <ListCheckItem text="github actions" />
      <ListCheckItem text="DevOps" />
      <ListCheckItem text="CI/CD" />
    </div>
    <!-- <div class="bg-[#20202a] rounded-lg p-2">
      <ul>
        <SideMenuItem href="/">
          <HomeIcon />
          Inicio
        </SideMenuItem>
        <SideMenuItem href="/#">
          <SearchIcon />
          Buscar
        </SideMenuItem>
      </ul>
    </div>
    <div class="bg-zinc-900 rounded-lg p-2">
      <ul>
        <SideMenuItem href="/#">
          <LibraryIcon />
          Biblioteca
        </SideMenuItem>
      </ul>
    </div> -->
  </div>

  <!-- Sección fija de iconos sociales -->
  <div class="flex-shrink-0">
    <div class="flex justify-between items-center gap-4 py-4 bg-[#252532fa] border-t border-zinc-700 px-8">
      <a 
        href="https://linkedin.com/in/lenin-huaylla" 
        target="_blank" 
        rel="noopener noreferrer"
        class="text-zinc-400 hover:text-blue-400 transition-colors duration-200"
        aria-label="LinkedIn"
      >
        <LinkedInIcon class="w-5 h-5" />
      </a>
      <a 
        href="https://dribbble.com/leninhuaylla" 
        target="_blank" 
        rel="noopener noreferrer"
        class="text-zinc-400 hover:text-pink-400 transition-colors duration-200"
        aria-label="Dribbble"
      >
        <DribbbleIcon class="w-5 h-5" />
      </a>
      <a 
        href="https://behance.net/leninhuaylla" 
        target="_blank" 
        rel="noopener noreferrer"
        class="text-zinc-400 hover:text-blue-500 transition-colors duration-200"
        aria-label="Behance"
      >
        <BehanceIcon class="w-5 h-5" />
      </a>
      <a 
        href="https://github.com/leninhuaylla" 
        target="_blank" 
        rel="noopener noreferrer"
        class="text-zinc-400 hover:text-white transition-colors duration-200"
        aria-label="GitHub"
      >
        <GitHubIcon class="w-5 h-5" />
      </a>
      <a 
        href="https://twitter.com/leninhuaylla" 
        target="_blank" 
        rel="noopener noreferrer"
        class="text-zinc-400 hover:text-blue-400 transition-colors duration-200"
        aria-label="Twitter"
      >
        <TwitterIcon class="w-5 h-5" />
      </a>
    </div>
  </div>
</nav>
