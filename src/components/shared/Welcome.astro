---
import AsideMenu from "@/components/aside/AsideMenu.astro";
import MainContent from "@/components/main/MainContent.astro";

---

<div id="app" class="relative h-screen p-2 gap-2">
	<!-- <img id="background" src={background.src} alt="" fetchpriority="high" /> -->
	<aside class="[grid-area:aside] rounded-lg flex-col flex overflow-y-auto [scrollbar-width:none] [-ms-overflow-style:none] [&::-webkit-scrollbar]:hidden">
		<AsideMenu />
	</aside>
	<main class="[grid-area:main] rounded-lg bg-zinc-900 overflow-y-auto text-zinc-100">
		<MainContent />
	</main>
	<aside class="[grid-area:right_aside] rounded-lg bg-zinc-600 overflow-y-auto text-zinc-100">
		Main
	</aside>
	<footer class="[grid-area:player] bg-gray-500">
		Footer
	</footer>
</div>

<style>
	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(100px);
	}

	#app {
		font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
		display: grid;
		grid-template-areas:
			'aside main main right_aside'
			'player player player player';
		grid-template-columns: 290px 1fr 1fr 50px;
		grid-template-rows: 1fr auto;
	}
</style>
