---
export interface Props {
  title?: string;
  subtitle?: string;
  description?: string;
  buttonText?: string;
  backgroundImage?: string;
}

const {
  title = "Discover my Amazing Art Space!",
  subtitle = "I build automation tools.",
  description = "",
  buttonText = "EXPLORE NOW",
  backgroundImage = "/hero-bg.jpg"
} = Astro.props;
---

<section class="relative h-screen flex items-center justify-center overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <div class="w-full h-full bg-gradient-to-r from-purple-900 via-blue-900 to-indigo-900 opacity-90"></div>
    <!-- You can replace this with an actual background image -->
    <div class="absolute inset-0 bg-[url('/hero-pattern.svg')] bg-cover bg-center opacity-20"></div>
  </div>
  
  <!-- Content -->
  <div class="relative z-10 max-w-6xl mx-auto px-6 flex items-center justify-between w-full">
    <!-- Left Content -->
    <div class="flex-1 text-white">
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold leading-tight mb-6">
        {title}
      </h1>
      
      <!-- Code snippet -->
      <div class="flex items-center gap-2 mb-8 text-lg md:text-xl">
        <span class="text-yellow-400">&lt;code&gt;</span>
        <span class="text-gray-300">{subtitle}</span>
        <span class="text-yellow-400">&lt;/code&gt;</span>
      </div>
      
      <!-- CTA Button -->
      <button class="bg-yellow-500 hover:bg-yellow-600 text-black font-bold py-4 px-8 rounded-none transition-colors duration-300 text-lg tracking-wider">
        {buttonText}
      </button>
    </div>
    
    <!-- Right Content - Character Image -->
    <div class="lg:block flex-1 flex justify-end">
      <div class="relative">
        <!-- Character placeholder - you can replace with actual image -->
        <div class="w-96 h-96 bg-gradient-to-b from-gray-400 to-gray-600 rounded-full flex items-center justify-center">
          <span class="text-white text-lg">Character Image</span>
        </div>
        <!-- Floating elements could be added here -->
      </div>
    </div>
  </div>
  
  <!-- Decorative elements -->
  <div class="absolute top-20 left-20 w-20 h-20 border border-yellow-400 opacity-30 rotate-45"></div>
  <div class="absolute bottom-20 right-20 w-16 h-16 border border-blue-400 opacity-30 rotate-12"></div>
</section>