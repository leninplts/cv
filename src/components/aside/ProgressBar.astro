---
export interface Props {
  skill: string;
  percentage: number;
  color?: string;
}

const { skill, percentage, color = "#f0b100" } = Astro.props;
---

<div class="w-full">
  <!-- Header con skill y porcentaje -->
  <div class="flex justify-between items-center mb-2">
    <span class="text-zinc-300 text-sm font-medium">{skill}</span>
    <span class="text-zinc-300 text-sm">{percentage}%</span>
  </div>
  
  <!-- Barra de progreso -->
  <div class="w-full bg-gray-700 rounded-full h-1">
    <div 
      class="h-1 rounded-full transition-all duration-500 ease-out"
      style={`width: ${percentage}%; background-color: ${color};`}
    ></div>
  </div>
</div>